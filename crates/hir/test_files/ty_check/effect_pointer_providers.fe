fn read_x() -> u256 uses (x: u256) {
    x
}

fn bump_x() uses (mut x: u256) {
    x += 1
}

fn test_mem_ptr() uses (mem: std::evm::RawMem) {
    let p: std::evm::MemPtr<u256> = mem.mem_ptr(0)
    with (p) {
        let _v = read_x()
        bump_x()
    }
}

fn test_calldata_ptr_readonly() {
    let c = std::evm::CalldataPtr<u256> { offset: 0 }
    with (c) {
        let _v = read_x()
    }
}
